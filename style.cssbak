body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.container {
    width: 90%;
    max-width: 600px;
    margin: 20px auto;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0,0,0,0.1);
}

h1, h2 {
    text-align: center;
}

.meal-selector {
    margin: 20px 0;
}

.meal-selector label {
    display: block;
    margin-bottom: 10px;
}

button {
    width: 100%;
    padding: 10px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    margin-bottom: 20px;
}

button:hover {
    background-color: #218838;
}

.grocery-list ul {
    list-style: none;
    padding: 0;
}

.grocery-list li {
    padding: 5px 0;
    border-bottom: 1px solid #ddd;
}
